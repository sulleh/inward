<h1> <%= @entry.created_at.strftime("%A %B %e, %G") %> </h1>


<%= @entry.content %>


<br>

<% entry_analysis = WordsCounted.count(@entry.content, exclude:['the', 'i', 'im', 'of', 'and', 'to', 
	'a', 'in', 'for', 'is', 'on', 'that', 'by', 'this', 'with', 'it', 'be', 'are', 'from', 'at', 'as', 'an', 'was', 'will', 'if', 'but', 'has', 'do', 'i\'m', 'some', 'well','am', 'there', 'very', 'since', 'out', 'well'] ) %>


<br>

<% if Rails.env.development?  %>

<div class="alert alert-warning" role="alert"> <h4>Debug Output</h4>
<h5>Inferred Emotion Counts: </h5>
	<li> Happy: </li>
	<li> Sad: </li>
	<li> Afraid-Surprised:</li>
	<li> Angry-Disgusted:</li>
	

<h5> Raw Output </h5>
	<li> Total Characters: <%= entry_analysis.char_count %> </li>
	<li> Unique Word Count: <%= entry_analysis.unique_word_count %> </li>
	<li> Most Occurring Word(s): <%= entry_analysis.most_occurring_words %> </li>
	<li> Longest Word: <%= entry_analysis.longest_words %> </li>
	<li> Number of words: <%= entry_analysis.word_count %> </li>
	<li> Longest Word: <%= entry_analysis.longest_words %> </li>
	<li> Word Occurances: <%= entry_analysis.sorted_word_occurrences.to_s %> </li>
	<li> All words as an array: <%= entry_analysis.words %> </li>
</div>

<% end %>